<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <title>News App</title>
    <link rel="icon" href="images/news-icon.png">
    <style>
        #loader {

            border: 4px solid #1f2937;
            border-radius: 50%;
            border-top: 4px solid #3498db;
            width: 40px;
            height: 40px;
            -webkit-animation: spin 2s linear infinite;
            /* Safari */
            animation: spin 1s linear infinite;
            margin: auto;
            z-index: 9999;
        }

        /* Safari */
        @-webkit-keyframes spin {
            0% {
                -webkit-transform: rotate(0deg);
            }

            100% {
                -webkit-transform: rotate(360deg);
            }
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css">
</head>

<body onload="myFunction()" class="bg-gray-800 ">

    <nav class="flex justify-center bg-gradient-to-r from-blue-500 to-cyan-300  py-2 shadow-2xl">
        <div class="px-12">
            <a class="pt-2 pb-2 mr-4 text-2xl justify-center flex whitespace-nowrap"  href="">
                <img class="w-1/12 mx-2 " src="images/news-icon.png" alt="">
                <b class="text-white">NewsRoom</b>
            </a>
        </div>
    </nav>

    <div class=" justify-center ">
        <div class="mx-10 p-5 justify-center">
            <img class="w-1/12  mx-auto" src="images/pngegg.png" alt="">
            <div class=" container flex justify-center  ">
                <form class=" container flex justify-center  " action="/" method="POST">
                    <input
                        class="w-1/2 border px-5  border-gray-400 shadow-xl rounded-l-lg focus:bg-slate-100 focus:outline-none focus:border-sky-300 focus:ring-sky-300 focus:ring-1"
                        type="text" name="keyword" placeholder="What are you looking for?">
                    <button type="submit"
                        class="bg-red-600 p-3 shadow-lg rounded-r-lg text-white hover:bg-red-500 hover:border  hover:border-red-600 focus:bg-red-700">Search</button>
                </form>
            </div>


        </div>
    </div>




    <div>

        <div id="loader">

        </div>
        <% datum.slice(0,10).forEach(function(dat) { %>
            <div onload="myFunction()" class="mx-56 my-4 shadow-7xl bg-gray-600  rounded-md">
                <div class="px-5 py-2 flex content-around ">

                    <img class=" drop-shadow-lg w-2/6 h-56 rounded-sm mx-4 my-4" src="<%=dat.urlToImage%>" alt=""
                        onerror=this.src="images/notavail.jpg">

                    <div>
                        <div class="py-4 px-7">
                            <h5 class="text-xl font-bold text-white">
                                <%=dat.title%>
                            </h5>
                            <p class="relative flex flex-col text-white">
                                <%=dat.description %>
                            </p>
                            <p class="mt-5  text-white">
                                <%=dat.publishedAt%> | <%=dat.source.name%>-<%=dat.author%>
                            </p>
                            <a class="my-3 cursor-pointer bg-blue-500  rounded-md text-white inline-block p-2 hover:bg-blue-400"
                                href="<%=dat.url%>" target="_blank">Read More</a>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
            <% } ); %>

    </div>
   
    <footer class="  h-20 bg-gradient-to-r from-blue-500 to-cyan-300 ">
        <a href="">
            <img src="" alt="">
        </a>
        <a href=""></a>
        <a href=""></a>
    </footer>
    
    <script>
        function myFunction() {

            document.getElementById("loader").style.display = 'none';
        }
    </script>
</body>

</html>